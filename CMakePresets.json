{
    "version": 6,
    "configurePresets": [
        {
            "name": "config-base",
            "hidden": true,
            "cacheVariables": {
                "PLEXUS_SKIP_TEST_RULES": "OFF",
                "PLEXUS_SKIP_INSTALL_RULES": "OFF",
                "PLEXUS_SKIP_PACKAGE_RULES": "OFF"
            },
            "binaryDir": "${sourceDir}/out/$env{TARGET_OS}/$env{TARGET_ARCH}/build/${presetName}",
            "installDir": "${sourceDir}/out/$env{TARGET_OS}/$env{TARGET_ARCH}/install"
        },
        {
            "name": "relwithdebinfo-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CONFIGURATION_TYPES": "RelWithDebInfo"
            }
        },
        {
            "name": "release-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CONFIGURATION_TYPES": "Release"
            }
        },
        {
            "name": "debug-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "CMAKE_DEBUG_POSTFIX": "d"
            }
        },
        {
            "name": "static-relwithdebinfo",
            "inherits": ["config-base", "relwithdebinfo-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
            }
        },
        {
            "name": "static-release",
            "inherits": ["config-base", "release-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
            }
        },
        {
            "name": "static-debug",
            "inherits": ["config-base", "debug-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebug"
            }
        },
        {
            "name": "shared-relwithdebinfo",
            "inherits": ["config-base", "relwithdebinfo-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
            }
        },
        {
            "name": "shared-release",
            "inherits": ["config-base", "release-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
            }
        },
        {
            "name": "shared-debug",
            "inherits": ["config-base", "debug-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebugDLL"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "shared-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "shared-debug"
        },
        {
            "name": "shared-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "shared-release"
        },
        {
            "name": "shared-relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "configuration": "RelWithDebInfo",
            "configurePreset": "shared-relwithdebinfo"
        },
        {
            "name": "static-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "static-debug"
        },
        {
            "name": "static-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "static-release"
        },
        {
            "name": "static-relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "configuration": "RelWithDebInfo",
            "configurePreset": "static-relwithdebinfo"
        }
    ],
    "testPresets": [
        {
            "name": "test-base",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            },
            "hidden": true
        },
        {
            "name": "static-release",
            "configurePreset": "static-release",
            "configuration": "Release",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "static-relwithdebinfo",
            "configurePreset": "static-relwithdebinfo",
            "configuration": "RelWithDebInfo",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "static-debug",
            "configurePreset": "static-debug",
            "configuration": "Debug",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "shared-release",
            "configurePreset": "shared-release",
            "configuration": "Release",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "shared-relwithdebinfo",
            "configurePreset": "shared-relwithdebinfo",
            "configuration": "RelWithDebInfo",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "shared-debug",
            "configurePreset": "shared-debug",
            "configuration": "Debug",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        }
    ],
    "packagePresets": [
        {
            "name": "debian-package-bin",
            "displayName": "plexus (DEB)",
            "description": "Debian binary package",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "DEB"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "A tool for connecting network applications through NAT",
                "CPACK_PACKAGE_DESCRIPTION": "The 'plexus' utility provides the ability to connect network\napplications based on UDP protocol through NAT.",
                "CPACK_COMPONENTS_ALL": "binary_files;bin_deb_files",
                "CPACK_DEBIAN_PACKAGE_SECTION": "utils"
            },
            "packageName": "plexus",
            "packageDirectory": ".."
        },
        {
            "name": "debian-package-lib",
            "displayName": "libplexus (DEB)",
            "description": "Debian library package",
            "configurePreset": "shared-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "DEB"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_DEBIAN_PACKAGE_DEPENDS": "libtubus (>= 1.2.3), libwormhole (>= 1.2.4)",
                "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "Library for connecting network applications through NAT",
                "CPACK_PACKAGE_DESCRIPTION": "The 'plexus' library provides the ability to connect network\napplications based on UDP protocol through NAT.",
                "CPACK_COMPONENTS_ALL": "library_files;lib_deb_files"
            },
            "packageName": "libplexus",
            "packageDirectory": ".."
        },
        {
            "name": "debian-package-dev",
            "displayName": "libplexus-dev (DEB)",
            "description": "Debian development package",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "DEB"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_DEBIAN_PACKAGE_DEPENDS": "libboost-dev (>= 1.74) | libboost1.81-dev, libtubus-dev (>= 1.2.3), libwormhole-dev (>= 1.2.4), libopendht-dev (>= 3.4.0), libplexus (>= 3.2.1)",
                "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "C++ development library for connecting network applications through NAT",
                "CPACK_PACKAGE_DESCRIPTION": "The 'plexus' library provides the ability to connect network\napplications based on UDP protocol through NAT.",
                "CPACK_COMPONENTS_ALL": "archive_files;header_files;cmake_files;dev_deb_files;dev_doc_files",
                "CPACK_INSTALL_CMAKE_PROJECTS": "../static-relwithdebinfo;tubus;ALL;/;../shared-relwithdebinfo;tubus;ALL;/"
            },
            "packageName": "libplexus-dev",
            "packageDirectory": ".."
        },
        {
            "name": "rpm-package-bin",
            "displayName": "plexus (RPM)",
            "description": "RPM binary package",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "RPM"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_RPM_DEBUGINFO_PACKAGE": "ON",
                "CPACK_RPM_DEBUGINFO_SINGLE_PACKAGE": "ON",
                "CPACK_RPM_PACKAGE_SUMMARY": "A tool for connecting network applications through NAT",
                "CPACK_RPM_PACKAGE_DESCRIPTION": "The 'plexus' utility provides the ability to connect network\napplications based on UDP protocol through NAT.",
                "CPACK_COMPONENTS_ALL": "binary_files"
            },
            "packageName": "plexus",
            "packageDirectory": ".."
        },
        {
            "name": "rpm-package-lib",
            "displayName": "libplexus (RPM)",
            "description": "RPM library package",
            "configurePreset": "shared-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "RPM"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_RPM_DEBUGINFO_PACKAGE": "ON",
                "CPACK_RPM_DEBUGINFO_SINGLE_PACKAGE": "ON",
                "CPACK_RPM_PACKAGE_SUMMARY": "Library for connecting network applications through NAT",
                "CPACK_RPM_PACKAGE_DESCRIPTION": "The 'plexus' library provides the ability to connect network\napplications based on UDP protocol through NAT.",
                "CPACK_COMPONENTS_ALL": "library_files"
            },
            "packageName": "libplexus",
            "packageDirectory": ".."
        },
        {
            "name": "rpm-package-dev",
            "displayName": "libplexus-devel (RPM)",
            "description": "RPM development package",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "RPM"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_RPM_PACKAGE_SUMMARY": "C++ development library for connecting network applications through NAT",
                "CPACK_RPM_PACKAGE_DESCRIPTION": "The 'plexus' library provides the ability to connect network\napplications based on UDP protocol through NAT.",
                "CPACK_RPM_PACKAGE_REQUIRES": "boost-devel, openssl-devel, libtubus-devel >= 1.2.3, libwormhole-devel >= 1.2.4, libopendht-devel >= 3.4.0, libplexus = %{version}-%{release}",
                "CPACK_COMPONENTS_ALL": "archive_files;header_files;cmake_files;dev_doc_files",
                "CPACK_INSTALL_CMAKE_PROJECTS": "../static-relwithdebinfo;tubus;ALL;/;../shared-relwithdebinfo;tubus;ALL;/"
            },
            "packageName": "libplexus-devel",
            "packageDirectory": ".."
        },
        {
            "name": "archive",
            "displayName": "plexus (ZIP)",
            "description": "Portable ZIP archive",
            "configurePreset": "static-relwithdebinfo",
            "generators": [
                "ZIP"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_COMPONENTS_ALL": "binary_files;runtime_files;library_files;archive_files;header_files;cmake_files;lib_doc_files;pdb_files",
                "CPACK_ARCHIVE_COMPONENT_INSTALL": "ON",
                "CPACK_COMPONENTS_ALL_IN_ONE_PACKAGE": "ON",
                "CPACK_INSTALL_CMAKE_PROJECTS": "../static-relwithdebinfo;tubus;ALL;/;../shared-relwithdebinfo;tubus;ALL;/"
            },
            "packageName": "plexus",
            "packageDirectory": ".."
        }
    ],
